#include "libft.h"

size_t		ft_words(char const *s, char c)
{
	size_t	count;
	size_t	i;

	count = 0;
	i = 0;
	while (s[i])
	{
		if (s[i] != c)
		{
			count++;
			while (s[i] != c && s[i])
				i++;
			if (s[i] == '\0')
				return (count);
		}
		i++;
	}
	return (count);
}

char		**ft_strsplit(char const *s, char c)
{
	char	**str;
	size_t	i;
	size_t	k;
	size_t	len;
	size_t	tmp;

	if (!s || !c)
		return (NULL);
	i = 0;
	k = 0;
	if (!(str = ft_memalloc((ft_words(s, c) + 1)) * sizeof(*map)))
		return (NULL);
	while (s[i])
	{
		if (s[i] == c)
			i++;
		else
		{
			len = 0;
			tmp = i;
			while (s[tmp] != c && s[tmp] != '\0')
			{
				len++;
				tmp++;
			}
			if(!(str[k++] = ft_strsub(s, i, len)))
				return (NULL);
			i = i + len;
		}
	}
	str[k] = NULL;
	return (str);
}
